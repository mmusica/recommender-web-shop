<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="create-movie-table" author="mmusica">
        <createTable tableName="movie">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_movie"/>
            </column>
            <column name="movie_id" type="bigint"/>
            <column name="name" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-genre-table" author="mmusica">
        <createTable tableName="genre">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_category"/>
            </column>
            <column name="name" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-movie-genre-table" author="mmusica">
        <createTable tableName="movie_genre">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_movieGenre"/>
            </column>
            <column name="movie_id" type="bigint">
                <constraints foreignKeyName="fk_movieGenre_movie"
                             referencedTableName="movie"
                             referencedColumnNames="id"
                             deleteCascade="true"
                />
            </column>
            <column name="genre_id" type="bigint">
                <constraints foreignKeyName="fk_movieGenre_genre"
                             referencedTableName="genre"
                             referencedColumnNames="id"
                             deleteCascade="true"
                />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-user-table" author="mmusica">
        <createTable tableName="user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-user_movie_rating-table" author="mmusica">
        <createTable tableName="user_movie_rating">
            <column name="id">
                <constraints primaryKey="true" primaryKeyName="pk_userMovieRating"/>
            </column>
            <column name="user_id">
                <constraints foreignKeyName="fk_userMovieRating_user"
                             referencedTableName="user"
                             referencedColumnNames="id"
                             deleteCascade="true"
                />
            </column>
            <column name="movie_id">
                <constraints foreignKeyName="fk_userMovieRating_movie"
                             referencedTableName="movie"
                             referencedColumnNames="id"
                             deleteCascade="true"
                />
            </column>
            <column name="rating" type="float"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
